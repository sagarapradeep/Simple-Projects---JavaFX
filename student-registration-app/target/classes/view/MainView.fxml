<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.app.control.MainViewController">
   <children>
      <Label fx:id="lblTitle" alignment="CENTER" layoutX="100.0" layoutY="25.0" text="Student Registration App" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
         <font>
            <Font size="22.0" />
         </font></Label>
      <VBox layoutX="22.0" layoutY="60.0" spacing="20.0" AnchorPane.leftAnchor="22.0" AnchorPane.rightAnchor="21.0">
         <children>
            <HBox alignment="CENTER_RIGHT" maxWidth="500.0" spacing="33.0" VBox.vgrow="NEVER">
               <children>
                  <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="70.0" prefWidth="404.0" spacing="20.0" HBox.hgrow="NEVER">
                     <children>
                        <Button fx:id="btnNewStudent" mnemonicParsing="false" onAction="#btnNewStudentOnAction" text="+ New Student" VBox.vgrow="NEVER" />
                        <HBox spacing="20.0" VBox.vgrow="NEVER">
                           <children>
                              <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Strudent ID" />
                              <TextField fx:id="txtId" maxWidth="100.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <ImageView fx:id="imgProfilePic" fitHeight="69.0" fitWidth="69.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Student Name" />
                  <TextField fx:id="txtName" maxWidth="800.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Address" />
                  <TextField fx:id="txtAddress" maxWidth="800.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Sex" />
                  <RadioButton fx:id="rdoMale" maxWidth="79.0" mnemonicParsing="false" text="Male" />
                  <RadioButton fx:id="rdoFemale" maxWidth="79.0" mnemonicParsing="false" text="Female" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="270.0" spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Race" />
                  <TextField fx:id="txtRace" maxWidth="800.0" prefHeight="24.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="188.0" spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Mobile Number" />
                  <TextField fx:id="txtMobileNum" maxWidth="800.0" prefHeight="24.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="226.0" spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Fix Line Number" />
                  <TextField fx:id="txtFixedLineNum" maxWidth="800.0" prefHeight="24.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="270.0" spacing="20.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="110.0" text="Email" />
                  <TextField fx:id="txtEmail" maxWidth="800.0" prefHeight="24.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="btnNext" layoutX="410.0" layoutY="451.0" mnemonicParsing="false" onAction="#btnNextOnAction" text="Next -&gt;" AnchorPane.rightAnchor="21.0" />
      <Button fx:id="btnTempSave" layoutX="188.0" layoutY="463.0" mnemonicParsing="false" onAction="#btnTempSaveOnAction" text="Temp Save" />
   </children>
</AnchorPane>
